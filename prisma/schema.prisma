generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model BookingConfig {
  id               String @id @default("default")
  timezone         String @default("Asia/Karachi")
  slotDurationMin  Int    @default(15)
  startHour        Int    @default(15)
  endHour          Int    @default(1)
  workingDays      Int[]  @default([1, 2, 3, 4, 5])
  minNoticeHours   Int    @default(3)
  instantBookStart Int?
  instantBookEnd   Int?
  bufferMinutes    Int    @default(0)
}

model Booking {
  id          String   @id @default(uuid())
  name        String
  email       String
  company     String?
  date        DateTime @db.Date
  startTime   DateTime @db.Timestamptz
  endTime     DateTime @db.Timestamptz
  gcalEventId String?
  createdAt   DateTime @default(now())

  @@index([date])
  @@index([email])
}

model BlockedPeriod {
  id        String   @id @default(uuid())
  startTime DateTime @db.Timestamptz
  endTime   DateTime @db.Timestamptz
  reason    String?
  source    String   @default("manual")
  gcalId    String?
  createdAt DateTime @default(now())

  @@index([startTime, endTime])
}

model AdminToken {
  id           String   @id @default("google_calendar")
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  updatedAt    DateTime @updatedAt
}

model User {
  id                          String    @id @default(uuid())
  email                       String    @unique
  name                        String?
  passwordHash                String?
  googleId                    String?   @unique
  avatarUrl                   String?
  role                        String    @default("client")
  stripeCustomerId            String?   @unique
  stripeSubscriptionId        String?   @unique
  subscriptionStatus          String?
  currentPlan                 String?
  subscriptionCurrentPeriodEnd DateTime?
  tasks                       Task[]
  comments                    Comment[]
  subTaskComments             SubTaskComment[]
  attachments                 Attachment[]
  createdAt                   DateTime  @default(now())
  updatedAt                   DateTime  @updatedAt
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String
  status      String    @default("backlog")
  priority    String?
  order       Int       @default(0)
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  comments    Comment[]
  subtasks    SubTask[]
  attachments Attachment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId, status])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([taskId])
}

model SubTask {
  id          String            @id @default(uuid())
  title       String
  description String?
  status      String            @default("pending")
  credits     Int?
  taskId      String
  task        Task              @relation(fields: [taskId], references: [id], onDelete: Cascade)
  comments    SubTaskComment[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([taskId])
}

model SubTaskComment {
  id        String   @id @default(uuid())
  content   String
  subtaskId String
  subtask   SubTask  @relation(fields: [subtaskId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([subtaskId])
}

model Attachment {
  id        String   @id @default(uuid())
  url       String
  filename  String
  size      Int
  mimeType  String
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([taskId])
}
